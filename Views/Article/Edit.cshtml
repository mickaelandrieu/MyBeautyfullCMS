@model MyBeautyfullCMS.Models.Article

@{
    ViewBag.Title = "Edition d'un article";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "span10" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edition d'un article</legend>

        @Html.HiddenFor(model => model.ArticleId)

        <div class="editor-label">
            @Html.LabelFor(model => model.title, new { @class = "span10" })
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title, new { @class = "span10" })
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.introduction)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.introduction, new { @class = "span10" })
            @Html.ValidationMessageFor(model => model.introduction)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.content, new { @class = "span10" })
            @Html.ValidationMessageFor(model => model.content)
        </div>
        <div>
            @Html.DropDownList("TagId",ViewBag.Tags as IEnumerable<SelectListItem>, null, new { multiple = "multiple", size = "5" })
            @Html.ValidationMessageFor(model => model.TagId)
        </div>
         @Html.Hidden("UserId")
        <div class="editor-label">
            @Html.LabelFor(model => model.status)
        </div>
        <div class="editor-field checkox">
            @Html.CheckBoxFor(model => model.status)
        </div>
           
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.status)
        </div>
            

        <p>
            <input type="submit" value="Sauvegarder les modifications" class="btn btn-primary" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

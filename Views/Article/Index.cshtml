@model IEnumerable<Todo.Site.Models.Article>

@{
    ViewBag.Title = "Gestion des articles";
}

<p class="span10">
    <a href="#createArticleForm" class="btn btn-primary btn-large" id="createForm" data-toggle="modal" role="button">Créer un nouvel Article</a>
</p>
<table class="table table-stripped table-bordered span10">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.createdAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.introduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>Administration</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.createdAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.introduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status) - @Html.DisplayFor(modelItem => item.User.UserId)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = @item.ArticleId })"><i class="icon-pencil" title="Editer l'Article"></i></a>
            <a href="@Url.Action("Details", new { id = @item.ArticleId })"><i class="icon-eye-open" title="Voir l'Article"></i></a>
            <a href="@Url.Action("Delete" , new { id = @item.ArticleId })"><i class="icon-trash" title="Supprimer l'Article"></i></a>
        </td>
    </tr>
}
    </tbody>
</table>
<div id="createArticleForm" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
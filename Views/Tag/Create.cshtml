@model MyBeautyfullCMS.Models.Tag

@{
    ViewBag.Title = "Creation d'un tag";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tag</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.title)
        </div>
